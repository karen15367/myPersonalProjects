<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacgroundActivityPago"
    tools:context=".RealizarPagoActivity">

    <EditText
        android:id="@+id/nombreClientePago"
        android:layout_width="312sp"
        android:layout_height="61sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginBottom="550sp"
        android:autofillHints=""
        android:ems="15"
        android:inputType="text"
        android:minHeight="48sp"
        android:text="@string/nombre_del_cliente"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="41sp"
        android:layout_marginTop="63sp"
        android:layout_marginEnd="42sp"
        android:layout_marginBottom="38sp"
        android:background="@color/colorFondoAzulAgua"
        android:text="@string/ingrese_los_datos_del_pago_a_realizar"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/nombreClientePago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:autofillHints=""/>

    <EditText
        android:id="@+id/montoClientePago"
        android:layout_width="298sp"
        android:layout_height="59sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="300sp"
        android:layout_marginEnd="32sp"
        android:layout_marginBottom="550sp"
        android:autofillHints=""
        android:ems="15"
        android:inputType="text"
        android:minHeight="48sp"
        android:text="@string/monto"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/fechaClientePago"
        android:layout_width="292sp"
        android:layout_height="69sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="550sp"
        android:layout_marginEnd="32sp"
        android:layout_marginBottom="550sp"
        android:autofillHints=""
        android:ems="15"
        android:inputType="text"
        android:minHeight="48sp"
        android:text="@string/fecha"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/enviarPago"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:autofillHints=""
        android:text="@string/listo"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>