<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdecito"
    tools:context=".RealizarVentaActivity">

    <TextView
        android:id="@+id/ingreseDatosCompra"
        android:layout_width="302dp"
        android:layout_height="72dp"
        android:background="@color/colorPrimary"
        android:fontFamily="serif"
        android:text="@string/ingrese_los_datos_de_la_compra"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/nombreClienteCompra"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="571dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/nombre_del_cliente"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingreseDatosCompra"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/idProductoVenta"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="457dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/id_del_producto"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreClienteCompra"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/fechaDeCompra"
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="348dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/fecha"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idProductoVenta"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/enviarPago"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:autofillHints=""
        android:text="@string/listo"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>