<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92C8F3"
    tools:context=".VerClientesActivity">

    <Button
        android:id="@+id/buscarCliente"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="112dp"
        android:onClick="launchBuscarCliente"
        android:text="@string/buscar_cliente"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <EditText
        android:id="@+id/buscaCliente"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/ingresa_nombre_de_un_cliente"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buscarCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />

    <Button
        android:id="@+id/idCrearCliente"
        android:layout_width="294dp"
        android:layout_height="67dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="548dp"
        android:onClick="launchCrearCliente"
        android:text="@string/crear_cliente"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscarCliente" />
</androidx.constraintlayout.widget.ConstraintLayout>