<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ingreseDatosCompra"
        android:layout_width="302dp"
        android:layout_height="72dp"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-black"
        android:text="@string/bienvenido"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/buttonVerClientes"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:onClick="launchVerClientes"
        android:text="@string/ver_clientes"
        android:textColor="#6D4C41"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30" />

    <Button
        android:id="@+id/buttonVerRopa"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:onClick="launchVerRopa"
        android:text="@string/ver_ropa"
        android:textColor="#6D4C41"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/realizarVenta"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:onClick="launchRealizarVenta"
        android:text="@string/realizar_venta"
        android:textColor="#6D4C41"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60" />

    <Button
        android:id="@+id/realizarPago"
        android:layout_width="199dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:onClick="launchRealizarPago"
        android:text="@string/realizar_pago"
        android:textColor="#6D4C41"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>